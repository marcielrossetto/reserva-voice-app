<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pesquisar Reservas</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- CSS Local -->
    <link rel="stylesheet" href="/css/searching.css">
</head>

<body>
    <div class="main-wrapper">
        <!-- HEADER -->
       <!-- Substitua o bloco do header por este -->
<div id="header-container"></div>
            <!-- Conte√∫do ser√° injetado aqui pelo header.js -->
        </header>

        <!-- FILTROS -->
        <div class="filter-card">
            <form method="GET" class="filter-grid" id="filterForm">
                <% if (verCanceladas) { %>
                    <input type="hidden" name="canceladas" value="1">
                <% } %>
                
                <div>
                    <label class="small fw-bold">In√≠cio</label>
                    <input type="date" name="data_inicio" class="form-input" value="<%= data_inicio %>">
                </div>
                
                <div>
                    <label class="small fw-bold">Fim</label>
                    <input type="date" name="data_fim" class="form-input" value="<%= data_fim %>">
                </div>
                
                <div style="grid-column: span 2;">
                    <label class="small fw-bold">Busca</label>
                    <input type="text" name="busca" class="form-input" placeholder="Nome, Tel ou ID" value="<%= busca %>">
                </div>
                
                <div>
                    <button type="submit" class="btn btn-primary w-100">Filtrar</button>
                </div>
            </form>
        </div>

        <!-- RESUMO -->
        <div class="summary-section">
            <div class="btn-group">
                <span class="badge" style="background: <%= corBadge %>; color: <%= corTexto %>;">
                    <%= tituloPagina %>: <%= reservas.length %>
                </span>
                <span class="badge dark">
                    Pax Total: <%= totalPessoasFiltro %>
                </span>
            </div>
            <div class="btn-group">
                <% if (verCanceladas) { %>
                    <a href="/search" class="btn btn-secondary">Ativas</a>
                <% } else { %>
                    <a href="/search?canceladas=1" class="btn btn-outline-danger">Canceladas</a>
                    <a href="/adicionar-reserva" class="btn btn-primary">Nova</a>
                <% } %>
            </div>
        </div>

        <!-- TABELA -->
        <div class="table-responsive">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Cliente</th>
                        <th>Data/Hora</th>
                        <th>Pax</th>
                        <th>Mesa</th>
                        <th>Obs Reserva</th>
                        <th>Obs Cliente</th>
                        <th>Motivo Cancel.</th>
                        <th>Registro</th>
                        <th>A√ß√µes</th>
                    </tr>
                </thead>
                <tbody>
   <% reservas.forEach(r => { 
    const status = r.status ? 1 : 0;
    const tel = r.telefone?.replace(/\D/g, '') || '';

    // --- 1. TRATAMENTO DA DATA (YYYY-MM-DD para DD/MM/YYYY) ---
    const dataObj = r.data ? new Date(r.data) : null;
    const dataBr = (dataObj && !isNaN(dataObj)) ? dataObj.toLocaleDateString('pt-BR', {timeZone: 'UTC'}) : 'N/D';

    // --- 2. TRATAMENTO DO HOR√ÅRIO (Resolve o N/D) ---
    let horaExibicao = 'N/D';
    if (r.horario) {
        // Se j√° for uma string "19:00:00", pegamos os 5 primeiros caracteres
        if (typeof r.horario === 'string' && r.horario.includes(':')) {
            horaExibicao = r.horario.substring(0, 5);
        } else {
            // Se for um objeto Date, formatamos
            const hObj = new Date(r.horario);
            horaExibicao = !isNaN(hObj) ? hObj.toLocaleTimeString('pt-BR', {hour: '2-digit', minute: '2-digit', timeZone: 'UTC'}) : 'N/D';
        }
    }

    // --- 3. TRATAMENTO DO REGISTRO (Empresa, Usu√°rio e Emiss√£o) ---
    const emissaoObj = r.dataEmissao ? new Date(r.dataEmissao) : null;
    const emissaoBr = (emissaoObj && !isNaN(emissaoObj)) 
        ? emissaoObj.toLocaleDateString('pt-BR') + ' ' + emissaoObj.toLocaleTimeString('pt-BR', {hour: '2-digit', minute: '2-digit'}) 
        : 'N/D';

    const paramsZap = tel + '|' + r.nome + '|' + dataBr + '|' + horaExibicao + '|' + r.numPessoas;
%>
    <tr class="<%= status === 0 ? 'table-danger' : '' %>">
        <td class="text-muted small">#<%= r.id %></td>
        <td>
            <strong class="text-uppercase"><%= r.nome %></strong><br>
            <small class="text-primary"><i class="fab fa-whatsapp"></i> <%= r.telefone %></small>
        </td>
        <td>
            <%= dataBr %><br>
            <!-- Badge Corrigida -->
            <span class="badge rounded-pill bg-info text-white">
                <%= horaExibicao %>
            </span>
        </td>
        <td class="text-center"><b><%= r.numPessoas %></b></td>
        <td><span class="badge bg-light text-dark border"><%= r.numMesa || '-' %></span></td>
       <td>
    <div class="scroll-box">
        <%= r.observacoes || '' %>
    </div>
</td>
        <td>
    <div class="obs-scroll-box" style="color: #6a5af9; border-color: #d1d9ff;">
        <i class="fas fa-user-tag" style="font-size: 0.6rem;"></i> 
        <%= r.obsCliente || '' %>
    </div>
</td>
        <td class="text-danger small">
            <%= (status === 0) ? (r.motivoCancelamento || 'Cancelado') : '-' %>
        </td>

        <!-- COLUNA REGISTRO (IDENTIDADE COMPLETA) -->
        <td style="font-size: 0.7rem; line-height: 1.4;">
            <div class="text-truncate text-primary" title="Empresa">
                <i class="fas fa-building"></i> <%= r.nome_empresa %>
            </div>
            <div class="text-truncate text-dark" title="Usu√°rio que registrou">
                <i class="fas fa-user"></i> <%= r.usuario?.nome || 'Sistema' %>
            </div>
            <div class="text-muted">
                <i class="fas fa-clock"></i> <%= emissaoBr %>
            </div>
        </td>

        <td>
            <select class="custom-select custom-select-sm" style="width: 100px;" onchange="handleAction(this)">
                <option value="">A√ß√µes</option>
                <option value="whatsapp:<%= paramsZap %>">üì≤ WhatsApp</option>
                <option value="obs:<%= r.id %>">üìù Obs Cliente</option>
                <% if (status !== 0) { %>
                    <option value="editar:<%= r.id %>">‚úèÔ∏è Editar</option>
                    <option value="cancelar:<%= r.id %>">‚ùå Cancelar</option>
                <% } else { %>
                    <option value="reativar:<%= r.id %>">‚úÖ Reativar</option>
                <% } %>
            </select>
        </td>
    </tr>
<% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- MODAIS -->
    <!-- 1. Modal Editar -->
    <div id="modalEditar" class="modal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h6>Editar Reserva</h6>
                    <button type="button" class="btn-close btn-close-white"></button>
                </div>
                <div class="modal-body">
                    <form id="formEditar">
                        <input type="hidden" name="id_reserva" id="edit_id">
                        
                        <label class="modal-ios-label">Nome:</label>
                        <input type="text" name="nome" id="edit_nome" class="modal-ios-input">
                        
                        <div class="row g-2">
                            <div class="col-6">
                                <label class="modal-ios-label">Data:</label>
                                <input type="date" name="data" id="edit_data" class="modal-ios-input">
                            </div>
                            <div class="col-6">
                                <label class="modal-ios-label">Hora:</label>
                                <input type="time" name="horario" id="edit_horario" class="modal-ios-input">
                            </div>
                        </div>

                        <div class="row g-2">
                            <div class="col-6">
                                <label class="modal-ios-label">Telefone:</label>
                                <input type="text" name="telefone" id="edit_telefone" class="modal-ios-input">
                            </div>
                            <div class="col-6">
                                <label class="modal-ios-label">Pax:</label>
                                <input type="number" name="numPessoas" id="edit_numPessoas" class="modal-ios-input">
                            </div>
                        </div>

                        <div class="row g-2">
                            <div class="col-12">
                                <label class="modal-ios-label">Mesa:</label>
                                <input type="text" name="numMesa" id="edit_numMesa" class="modal-ios-input">
                            </div>
                        </div>

                        <label class="modal-ios-label">Obs Cliente (Fixo):</label>
                        <textarea name="obsCliente" id="edit_obsCliente" class="modal-ios-input" rows="2"></textarea>

                        <label class="modal-ios-label">Obs Reserva:</label>
                        <textarea name="observacoes" id="edit_observacoes" class="modal-ios-input" rows="2"></textarea>
                    </form>
                    <button class="btn btn-primary w-100 mt-3" onclick="salvarEdicao()">Salvar Altera√ß√µes</button>
                </div>
            </div>
        </div>
    </div>

    <!-- 2. Modal Obs Cliente -->
    <div id="modalObsCliente" class="modal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-dark">
                    <h6>Observa√ß√£o do Cliente</h6>
                    <button type="button" class="btn-close btn-close-white"></button>
                </div>
                <div class="modal-body">
                    <form id="formObsCliente">
                        <input type="hidden" name="id_reserva_obs" id="obs_id">
                        <textarea name="obsCliente" id="edit_obsCliente_modal" class="modal-ios-input" rows="6" placeholder="Notas sobre o cliente..."></textarea>
                    </form>
                    <button class="btn btn-dark w-100 mt-3" onclick="salvarObsCliente()">Salvar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- 3. Modal Cancelar -->
    <div id="modalCancelar" class="modal">
        <div class="modal-dialog modal-dialog-centered modal-dialog-sm">
            <div class="modal-content">
                <div class="modal-header bg-danger">
                    <h6>Cancelar Reserva</h6>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="cancelar_id_input">
                    <label class="small fw-bold mb-2">Motivo:</label>
                    <select id="motivo_cancel_select" class="modal-ios-input" multiple>
                        <option>Mudan√ßa de planos</option>
                        <option>Problemas de sa√∫de</option>
                        <option>Erro na reserva</option>
                        <option>N√£o informou</option>
                    </select>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger w-100" onclick="confirmarCancelamento()">Confirmar Cancelamento</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="/js/config.js"></script>
    <script src="/js/components/header.js"></script>
    <script src="/js/searching.js"></script>

    <script>
    // Injeta token JWT em todos os links e forms para manter autentica√ß√£o
    document.addEventListener('DOMContentLoaded', () => {
        const token = localStorage.getItem('token');
        if (!token) return;

        // Adiciona token como hidden input no form de filtros
        const form = document.getElementById('filterForm');
        if (form) {
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'token';
            input.value = token;
            form.appendChild(input);
        }

        // Adiciona token nos links de navega√ß√£o (Ativas/Canceladas)
        document.querySelectorAll('a[href^="/search"]').forEach(link => {
            const url = new URL(link.href, window.location.origin);
            url.searchParams.set('token', token);
            link.href = url.toString();
        });
    });
    </script>
</body>

</html>
